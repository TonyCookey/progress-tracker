generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPERADMIN
  GENERAL
  COLONEL
  VOLUNTEER
}

enum TeenRank {
  LIEUTENANT
  CAPTAIN
}

enum GroupType {
  PLATOON
  SQUAD
}

model Base {
  id         String     @id @default(cuid())
  name       String
  users      User[]
  teens      Teen[]
  groups     Group[]
  activities Activity[]
  offerings  Offering[]
}

model User {
  id                   String                 @id @default(cuid())
  name                 String
  username             String
  email                String                 @unique
  password             String
  dateOfBirth          DateTime?
  role                 UserRole
  baseId               String
  base                 Base                   @relation(fields: [baseId], references: [id])
  leadingGroups        Group[]                @relation("GroupLeader")
  supportingGroups     GroupSupport[]
  teacherParticipation TeacherParticipation[]
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
}

model Teen {
  id                    String                  @id @default(cuid())
  name                  String
  dateOfBirth           DateTime?
  gender                String
  rank                  TeenRank
  baseId                String
  base                  Base                    @relation(fields: [baseId], references: [id])
  platoon               Group?                  @relation("TeenPlatoon", fields: [groupId], references: [id])
  squadMemberships      GroupMember[]
  activityParticipation ActivityParticipation[]
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  groupId               String?

  @@index([baseId])
  @@index([groupId])
}

model Group {
  id          String         @id @default(cuid())
  name        String
  description String                  @default("")
  type        GroupType
  baseId      String
  base        Base           @relation(fields: [baseId], references: [id])
  leaderId    String
  leader      User           @relation("GroupLeader", fields: [leaderId], references: [id])
  support     GroupSupport[]
  members     GroupMember[]
  teens       Teen[]         @relation("TeenPlatoon")
  activities  Activity[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model GroupMember {
  id        String   @id @default(cuid())
  teenId    String
  groupId   String
  teen      Teen     @relation(fields: [teenId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teenId, groupId])
  @@index([groupId])
  @@index([teenId])
}

model GroupSupport {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  user      User     @relation(fields: [userId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Activity {
  id                   String                  @id @default(cuid())
  name                 String
  description          String                  @default("")
  type                 String
  date                 DateTime
  number               Int                     @default(0)
  isCrossBase          Boolean                 @default(false)
  baseId               String?
  base                 Base?                   @relation(fields: [baseId], references: [id])
  groups               Group[]
  teenParticipation    ActivityParticipation[]
  teacherParticipation TeacherParticipation[]
  createdAt            DateTime                @default(now())
  updatedAt            DateTime                @updatedAt

  @@index([baseId])
  @@index([date])
}

model ActivityParticipation {
  id         String   @id @default(cuid())
  activityId String
  teenId     String
  attended   Boolean
  notes      String?
  activity   Activity @relation(fields: [activityId], references: [id])
  teen       Teen     @relation(fields: [teenId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([activityId, teenId])  // prevent duplicate attendance records
  @@index([activityId])
  @@index([teenId])
}

model TeacherParticipation {
  id         String   @id @default(cuid())
  activityId String
  userId     String
  attended   Boolean  @default(false)
  role       String?
  notes      String?
  activity   Activity @relation(fields: [activityId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([activityId, userId])
  @@index([activityId])
  @@index([userId])
}

model Offering {
  id          String    @id @default(cuid())
  amount      Decimal   @db.Decimal(12,2) @default("0") // use Decimal for money (or keep Int cents)
  isCrossBase Boolean   @default(false)
  baseId      String?
  base        Base?     @relation(fields: [baseId], references: [id])
  date        DateTime
  service     String
  notes       String?   
  type        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([date])
  @@index([baseId])
}

